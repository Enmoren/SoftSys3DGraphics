<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

    <com.example.dragon.dynamicappend.NewWidget
        android:id="@+id/myView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        custom:titleText="美食广场"
        custom:content="800M"
        custom:titleTextColor="#00ff00"
        custom:titleTextSize="18sp"
        custom:contentBackGroundColor="@color/colorAccent"
        custom:titleBackGroundColor="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp"/>
    <TextView
        android:id="@+id/DynamicText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>